{
  "name": "icu4x",
  "version": "0.0.1",
  "description": "ICU4X JavaScript bindings via WebAssembly",
  "main": "lib/index.js",
  "type": "module",
  "directories": {
    "doc": "docs",
    "example": "example",
    "lib": "lib",
    "test": "test"
  },
  "ava": {
    "files": [
      "test/*.mjs"
    ],
    "require": [
      "esm"
    ]
  },
  "scripts": {
    "test": "ava",
    "prepare": "ls lib 1>/dev/null 2>&1 || mkdir lib && cp ../../include/* lib && rustup +nightly-2022-04-05 component add rust-src && cargo +nightly-2022-04-05 wasm-build-release --package icu_capi_cdylib --features wasm_default && mv ../../../../../target/wasm32-unknown-unknown/release-opt-size/icu_capi_cdylib.wasm lib/icu_capi.wasm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unicode-org/icu4x.git"
  },
  "keywords": [
    "i18n"
  ],
  "author": "The ICU4X Project Developers",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/unicode-org/icu4x/issues"
  },
  "homepage": "https://github.com/unicode-org/icu4x#readme",
  "devDependencies": {
    "ava": "^3.15.0",
    "benchmark": "2.1.4",
    "esm": "^3.2.25",
    "wabt": "^1.0.25",
    "wasm-opt": "^1.2.1"
  }
}
